<h1>Eat Da Burger</h1>

<div class="container">
	<div class="row">
		<div class="col-sm">
			<ul>
				{{#each burgers}}
					{{#unless devoured}}
						<li>
							{{id}}.
							{{burger_name}}
							<button class="delete" data-id="{{id}}">DEVOUR</button>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div class="col-sm">
			<ul>
				{{#each burgers}}
					{{#if devoured}}
						<li class="devoured">
							{{id}}.
							{{burger_name}}
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
</div>



<form id="add-burger">
	
	<div class="form-group">
		<textarea id="burger" name="burger" rows="5" cols="40"></textarea>
	</div>

	<button type="submit" id="submit-btn">Add Burger</button>

</form>
